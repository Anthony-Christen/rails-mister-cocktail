<h1><%= @cocktail.name %></h1>

<%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>

<h3>Doses</h3>

<% @cocktail.ingredients.each do |ingredient| %>
  <%= ingredient.name %>
<% end %>

<% @cocktail.doses.each do |dose| %>
  <p><%= dose.description %></p>
  <%= link_to 'Delete', dose_path(dose), method: :delete %>
<% end %>

<%= link_to "Add a new dose", new_cocktail_dose_path(@cocktail)  %>
<br>
<%= link_to "Back to list", cocktails_path  %>
